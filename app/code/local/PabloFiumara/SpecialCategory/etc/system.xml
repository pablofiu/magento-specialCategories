<?xml version="1.0"?>
<config>
    <tabs>
        <myconf translate="label">
            <label>Special Categories</label>
            <sort_order>75</sort_order>
        </myconf>
    </tabs>
    <sections>
        <tab translate="label" module="adminhtml">
            <label>Special Categories</label>
            <tab>myconf</tab>
            <sort_order>5</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label comment">
                    <label>Configuration</label>
                    <sort_order>25</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment><![CDATA[Please, choose below the categories to which you wish to apply a special colour to price.
                    If you desire not to have any special categories, just choose that option from the list and the extension will
                    not apply any special colour.]]></comment>
                    <fields>
                        <multiple_dropdown translate="label comment">
                            <label>Multiselect</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>pablofiumara_specialcategory/system_config_source_dropdown_values</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </multiple_dropdown>
                        <my_color translate="label">
                            <label>Special colour</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>pablofiumara_specialcategory/adminhtml_system_config_color</frontend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </my_color>
                    </fields>
                </general>
            </groups>
        </tab>
    </sections>
</config>
